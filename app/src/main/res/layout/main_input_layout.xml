                android:text="候选词11"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="候选词12"
                android:textSize="20dp"
