        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/tabBarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:flexDirection="row"
            app:flexWrap="wrap">

            <TextView
                android:id="@+id/tvTabGoods"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="商品" />

            <TextView
                android:id="@+id/tvTabShared"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="分享中" />

            <TextView
                android:id="@+id/tvTabSetting"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="设置" />

            <TextView
                android:id="@+id/tvTabHide"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="关闭" />

        </com.google.android.flexbox.FlexboxLayout>

        <include
            android:id="@+id/candidate_view"
            layout="@layout/candidate_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.osfans.trime.ime.keyboard.KeyboardView
            android:id="@+id/main_keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="@color/red_400" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGoods"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@mipmap/jk_ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="商品榜单" />
        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@color/yellow_500"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@color/grey_400"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@color/blue_500"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@color/red_400"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@color/yellow_500"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@color/grey_400"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@color/blue_500"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@color/red_400"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="20dp" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
